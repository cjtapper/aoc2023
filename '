# https://adventofcode.com/2023/day/8

from __future__ import annotations

import re

import pytest

import support

NODE_PATTERN = re.compile(r"([A-Z]{3}) = \(([A-Z]{3}), ([A-Z]{3})\)")

START_LABEL = "AAA"
DEST_LABEL = "ZZZ"


class NetworkNode(NamedTuple):
    label: str
    left: str
    right: str


def solve_for(input_data: str) -> int:
    instructions, network_s = input_data.split("\n\n")

    parsed_nodes = (parse_node(line) for line in network_s.splitlines())

    network = {node.label: node for node in parsed_nodes}
    current = START_NODE

    values = (parse_node(line) for line in network_s.splitlines())
    for v in values:
        pass

    # TODO: implement solution here!
    return 0


def parse_node(s: str) -> str:
    label, left, right = NODE_PATTERN.match(s).groups()
    return NetworkNode(label, left, right)


EXAMPLE_1 = """\
RL

AAA = (BBB, CCC)
BBB = (DDD, EEE)
CCC = (ZZZ, GGG)
DDD = (DDD, DDD)
EEE = (EEE, EEE)
GGG = (GGG, GGG)
ZZZ = (ZZZ, ZZZ)
"""
EXPECTED_1 = 2

EXAMPLE_2 = """\
LLR

AAA = (BBB, BBB)
BBB = (AAA, ZZZ)
ZZZ = (ZZZ, ZZZ)
"""
EXPECTED_2 = 6


@pytest.mark.parametrize(
    "input_data,expected",
    [
        (EXAMPLE_1, EXPECTED_1),
    ],
)
def test_example(input_data, expected):
    assert solve_for(input_data) == expected


if __name__ == "__main__":
    support.cli(__file__, solve_for)
